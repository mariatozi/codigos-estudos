function pedidoNamoro() {
    let resposta = prompt("Quer namorar comigo?");
    if (resposta.toLowerCase() === "sim") {
      alert("Yay! Eu estou muito animado!");
    } else {
      alert("Tudo bem, talvez a próxima vez.");
    }
  }
  
  pedidoNamoro();
  
  <!DOCTYPE html>
<html>
  <head>
    <title>Pedido de Namoro</title>
    <link rel="stylesheet" type="text/css" href="styles.css"
  </head>
  <body>
    <button onclick="pedidoNamoro()">Fazer o Pedido</button>

    <script>
      function pedidoNamoro() {
        let resposta = prompt("Quer namorar comigo?");
        if (resposta.toLowerCase() === "sim") {
          alert("Graças a Deus");
        } else {
          alert("Você não tem essa opção");
        }
      }
    </script>
  </body>
</html>

